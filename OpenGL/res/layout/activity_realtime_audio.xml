<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    
	<Button 
	    style="@style/button"
	    android:onClick="single_no_cycle"
	    android:text="单个不循环" />

	<SeekBar
	    android:id="@+id/sb_volume"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="音量调节"
	    android:textSize="12sp"/>
	
	<Button 
	    style="@style/button"
	    android:onClick="audios_no_cycle"
	    android:text="多个不循环" />
	
	<Button 
	    style="@style/button"
	    android:onClick="single_cycle"
	    android:text="单个循环" />
	
	<Button 
	    style="@style/button"
	    android:onClick="audios_cycle"
	    android:text="多个循环" />

    
</LinearLayout>
